@model Product
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Edit Product</title>
</head>
<body>
    <div class="container">
        <h2>Edit Product</h2>
        <form action="~/admin/EditSubmitProduct?id=@Model.Id" method="POST">
            <div class="form-group">
                <label for="productName">Product Name:</label>
                <input disabled="" name="name" value="@Model.Name" type="text" class="form-control" id="productName" placeholder="Enter product name">
            </div>
            <div class="form-group">
                <label for="productImg">Product URL:</label>
                <input name="image" value="@Model.Image" type="text" class="form-control" id="productImg" placeholder="Enter URL">
            </div>
            <div class="form-group">
                <label for="productDesc">Product Description:</label>
                <input name="description" value="@Model.Description" type="text" class="form-control" id="productDesc" placeholder="Enter Description">
            </div>
            <div class="form-group">
                <label for="productColor">Color:</label>
                <input name="color" value="@Model.Color" type="text" class="form-control" id="productColor" placeholder="Enter color">
            </div>
            <div class="form-group">
                <label for="productPrice">Price:</label>
                <input name="price" value="@Model.Price" type="text" class="form-control" id="productPrice" placeholder="Enter price">
            </div><div class="form-group">
                <label for="productSize">Size:</label>
                <input name="size" value="@Model.Size" type="text" class="form-control" id="productSize" placeholder="Enter size">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</body>
</html>